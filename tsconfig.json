{
  //  For more information: https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "experimentalDecorators": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "outDir": "build",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true
  },
  "exclude": [
    "App.js",
    "App.test.js",
    "build",
    "node_modules",
    "scripts",
    "webpack"
  ]
}